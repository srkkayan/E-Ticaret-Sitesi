@model Category
<form method="post">
    <h2>Yeni Kategori Oluştur</h2>
    <div class="row">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="row my-2">
        <div class="col-6">
            <button type="submit" class="btn btn-primary" style="border:#2c3e50; background-color:#2c3e50;">
                Kaydet
            </button>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="border:#2c3e50; background-color:#2c3e50;">Kategori Listesine Dön</a>
        </div>
    </div>  
</form>